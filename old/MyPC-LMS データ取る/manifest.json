{
    "manifest_version": 3,
    "name": "MyPC-LMS",
    "version": "1.0",
    "host_permissions": [
      "https://script.google.com/*"
    ],
    "permissions": [
      "storage"
    ],
    "icons": {
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://itc-lms.ecc.u-tokyo.ac.jp/*"],
        "css": [
            "slidemenu.css",
            "ctrlmenu.css"
        ]
      },
      {
        "matches": ["https://itc-lms.ecc.u-tokyo.ac.jp/lms/task/*"],
        "css":[
            "task.css"
        ],
        "js": [
            "task.js"
        ]
      }
    ],
    "options_ui": {
      "page": "options.html"
    }
  }